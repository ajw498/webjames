# Makefile for WebJames the web server
#
# Settings for the gcc/unixlib build using the gccsdk cross compiler

#Programs
CC = gcc
LINK = gcc
MEMCHECK =
SQUEEZE =
SETTYPE =

#Libraries
MEMCHECKLIB =
STUBS =
OSLIB = -loslib
REGEX = -lregex

#Compiler flags
THROWBACK =
DEPEND =
WARNINGS = -Wall -Wundef -Wpointer-arith -Wmissing-prototypes
OPTIMISATION = -O2
DEBUG =
INCLUDE = -I/home/cross/libs

#Linker flags
LINKDEBUG =

#!Run file
WIMPSLOT = $(WIMPSLOT_UNIXLIB)
STDERR = .*
TYPESTDERR = .*

#Convert RISC OS style c/file to file.c
all2: all

setup: c h
	(cd c && find * -type f | sed 's/.*/mv & ..\/&.c/' | /bin/sh)
	(cd h && find * -type f | sed 's/.*/mv & ..\/&.h/' | /bin/sh)
	rmdir c h

c h:
	@echo files already setup; false

handler.o: build/php
